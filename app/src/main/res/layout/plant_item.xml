<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/apiResultItem">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgPlantAPI"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAddWatering"
        android:layout_width="214dp"
        android:layout_height="26dp"
        android:layout_marginTop="16dp"
        android:background="@color/buttonColor"
        android:fontFamily="@font/amaranth"
        android:text="Add reminder"
        android:textAllCaps="false"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.28"
        app:layout_constraintStart_toEndOf="@+id/imgPlantAPI"
        app:layout_constraintTop_toBottomOf="@+id/txtCommonNameAPI" />

    <TextView
        android:id="@+id/txtCommonNameAPI"
        android:layout_width="265dp"
        android:layout_height="38dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/amaranth"
        android:gravity="center"
        android:text="The name of the plant"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.578"
        app:layout_constraintStart_toEndOf="@+id/imgPlantAPI"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgDelete"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.407"
        app:layout_constraintStart_toEndOf="@+id/btnAddWatering"
        app:layout_constraintTop_toBottomOf="@+id/txtCommonNameAPI"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/delete"
        tools:ignore="VectorDrawableCompat" />

</androidx.constraintlayout.widget.ConstraintLayout>